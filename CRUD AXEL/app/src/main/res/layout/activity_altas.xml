<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Altas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#95C881"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:backgroundTint="#46B378"
                android:onClick="Back"
                android:text="Regresar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="PetFriend"
                android:textAlignment="center"
                android:textSize="20dp"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Ingrese el Id de su Mascota"
                android:textAlignment="center"
                android:textColor="#FF0000" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Noid"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Encierre si su mascota es un perro o gato"
                android:textAlignment="center"
                android:textColor="#FF0000"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipe">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dog"
                    android:foregroundTint="#00F7FF"
                    android:text="Perro"
                    android:textColor="#009688"/>
                <RadioButton
                    android:layout_width="4007dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cat"
                    android:text="Gatito"
                    android:textAlignment="gravity"
                    android:textColor="#009688"/>


            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Cual es el nombre de su mascota? :)"
                android:textAlignment="center"
                android:textColor="#FF0000"/>
            <EditText
                android:id="@+id/nompet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Comida favorita de su mascota"
                android:textAlignment="center"
                android:textColor="#FF0000"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comidafav"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="Selecciona el tipo de Comida"
                android:textAlignment="center"
                android:textColor="#FF0000"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/comidatipo"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Seleccione la comida"
                android:textAlignment="center"
                android:textColor="#FF0000"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/comida"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Selecciona 1-3 opciones"
                android:textAlignment="center"
                android:textColor="#FF0000"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/limpio"
                android:text="Lo cepilla y baÃ±a cada semana"
                android:textAlignment="center"/>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/veteri"
                android:text="Visita al veterinario cada dos meses"
                android:textAlignment="center"/>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:id="@+id/caminar"
                android:text="Sale a caminar minimo dos veces al dia"
                android:textAlignment="center"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/agregar"
                android:backgroundTint="#9C27B0"
                android:onClick="Agregar"
                android:text="Dar de alta"/>


        </LinearLayout>
    </ScrollView>



</RelativeLayout>
